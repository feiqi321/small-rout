<!--pages/addedit/addedit.wxml-->
<view class='edit-wp'>
  <view class='form-item'>
    <label>
      <text class='label'>联系人</text>
      <view class='input-area'>
        <input type='text' value='{{address.linkman}}'></input>
      </view>
    </label>
  </view>
  <view class='form-item'>
    <label>
      <text class='label'>电话</text>
      <view class='input-area'>
        <input type='number' value='{{address.tel}}'></input>
      </view>
    </label>
  </view>
  <view class='form-item'>
    <label>
      <text class='label'>详细地址</text>
      <view class='input-area'>
        <textarea>{{address.detail}}</textarea>
      </view>
    </label>
  </view>
</view>
<view class='btn-wrapper'>
  <text class='delete'>删除</text>
  <text class='submit'>确定</text>
</view>