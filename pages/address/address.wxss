/* pages/address/address.wxss */
.add{
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  color: #f00;
  background: #fff;
  font-size: 28rpx;
}
.add-item{
  padding: 15rpx 20rpx;
  margin-bottom: 15rpx;
  overflow: hidden;
  line-height: 2em;
  font-size: 24rpx;
  color: #999;
  position: relative;
  background: #fff;
}
.add-item text{
  display: block;
  width: 60%;
}
.add-item .phone{
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
}
.add-item image{
  position: absolute;
  width: 60rpx;
  height: 60rpx;
  right: 10px;
  top: 50%;
  margin-top: -30rpx;
  z-index: 10;
}
.empty{
  padding-top: 80rpx;
  text-align: center;
  font-size: 28rpx;
  color: #999;
}