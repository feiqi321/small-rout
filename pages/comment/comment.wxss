/* pages/comment/comment.wxss */
.title{
  line-height: 80rpx;
  padding: 0 20rpx;
  border-bottom: 1px solid #f2f2f2;
  background: #fff;
  font-size: 28rpx;
}
.title input{
  width: 100%;
  line-height: 80rpx;
  height: 80rpx;
}
.detail{
  padding: 20rpx;
  border-bottom: 1px solid #f2f2f2;
  background: #fff;
  font-size: 28rpx;
}
.detail textarea{
  width: 100%;
  height: 300rpx;
}
.addImg{
  padding: 20rpx;
  background: #fff;
}
.addImg image{
  width: 120rpx;
  height: 120rpx;
}
.btnwrapper{
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
}
.btnwrapper text{
  display: block;
  line-height: 80rpx;
  text-align: center;
  background: #ff2744;
  color: #fff;
  font-size: 30rpx;
}