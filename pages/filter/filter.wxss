/* pages/filter/filter.wxss */
.filter{
  width: 100%;
  height: 100%;
  position: absolute;
  font-size: 24rpx;
  color: #666;
}
.left-side{
  width: 8em;
 
  overflow: hidden;
  position: absolute;
  left: 0;
  top: 0;
  height: 100%;
  overflow-y: auto;
}
.left-side text{
  text-overflow: ellipsis;
  line-height: 35px;
  overflow: hidden;
  white-space: nowrap;
  display: block;
  text-align: center;
  height: 35px;
  box-sizing: border-box;
}
.left-side .active{
  background: #fff;
  font-weight: bold;
}
.right-wrapper{
  box-sizing: border-box;
  padding: 10px;
  height: 100%;
  overflow-y: auto;
  background: #fff;
  position: absolute;
  left: 8em;
  right: 0;
  top: 0;
}

.filter .f-type{
  display: block;
  line-height: 30px;
  font-size: 12px;
  padding-left: 4%;
}

.filter .thr-wrapper{
  overflow: hidden;
}
.thr-wrapper text{
  display: inline-block;
  background: #f5f5f5;
  text-align: center;
  width: 28%;
  line-height: 35px;
  border-radius: 6px;
  font-size: 12px;
  margin-left: 4%;
  margin-bottom: 10px;
}