.home-nav-item{
  width: 25%;
  float: left;
  text-align: center;
  color: #666;
  overflow: hidden;
  border-right:1px solid #f2f2f2;
  border-bottom: 1px solid #f2f2f2;
  font-size: 24rpx;
  box-sizing: border-box;
  padding-bottom: 10rpx;
}
.home-nav-item image{
  height: 40rpx;
  width:40rpx;
  overflow: hidden;
  margin: 10rpx auto 10rpx;
}
.home-nav .section_title{
}
.tj-hd{
  line-height: 60rpx;
  text-align: center;
  background: #fff;
  font-size: 26rpx;
  border-bottom: 1px solid #e1e1e1;
  margin-top: 20rpx;
}
.footer{
  text-align: center;
  margin-top: 20rpx;
  padding: 40rpx;
  font-size: 24rpx;
  line-height: 45rpx;
  color: #666;
}
.footer text{
  display: block;
  
}

/* componets/search.wxss */
.search-box{
  padding: 10rpx;
  background: #f5f5f5;
}
.search-box .input{
  background: #fff;
  font-size: 24rpx;
  padding: 0 10px;
  height: 30rpx;
  line-height: 30rpx;
}

.home-fx{
  overflow: hidden;
}
.home-fx .hd{
  text-align: center;
  font-size: 30rpx;
  line-height: 35rpx;
  margin-top: 10rpx;
}
.home-fx .wrapper{
  overflow: hidden;
  padding: 2%;
  text-align: left;
  background: #fff;
}
.home-fx .fx-item{
  margin: 0 1.5% 10rpx;
  width: 25%;
  float: left;
  padding: 15rpx 2.5%;
  line-height: 1.8em;
  font-size: 28rpx;
}
.home-fx .fx-item image{
  width: 100%;
  border-radius: 6px;
}
.home-fx .fx-item text{
  height: 2em;
  line-height: 2em;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.home-fx .fx-item .f-tb{
  font-size: 24rpx;
  text-align: right;
  color: #999;
  overflow: hidden;
}
.home-fx .f-tb image{
  width: 26rpx;
  height: 26rpx;
  vertical-align: middle;
  margin-right:5px; 
}
.home-fx .f-tb .fl{
  float: left;
}