/* pages/orderlist/orderlist.wxss */

.topnav {
  border-top: 1px solid #e1e1e1;
  line-height: 90rpx;
  border-bottom: 1px solid #e1e1e1;
  overflow: hidden;
  display: flex;
  background: #fff;
  position: fixed;
  width: 100%;
  left: 0;
  top: 0;
}

.topnav text {
  flex: 1;
  margin: 0 20rpx;
  font-size: 28rpx;
  text-align: center;
  line-height: 82rpx;
  border-top: 4rpx solid #fff;
  border-bottom: 4rpx solid #fff;
  color: #666;
}

.topnav .active {
  border-bottom-color: #f44;
}
.position{
  line-height: 30px;
  padding-left: 10px;
  
}
.listwrapper {
  margin-top: 100rpx;
}
.sx-btn{
  position: fixed;
  right: 0;
  top: 230px;
  width: 1em;
  line-height: 2em;
  padding: .5em;
  background: #fafafa;
  border: 1px solid #e1e1e1;
  border-right: 0;
  font-size: 28rpx;
  border-top-left-radius: 6px;
  border-bottom-left-radius: 6px;
}
.filter-wrapper{
  width: 100%;
  height: 100%;
  position: fixed;
  z-index: 1;
  left: 0;
  top: 0;
}
.filter-wrapper .mask{
  position: absolute;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, .2);
  left: 0;
  top: 0;
}
.filter-wrapper .filter{
  width: 70%;
  position: absolute;
  height: 100%;
  overflow-y: auto;
  background: #fff;
  top: 0;
  right: 0;
  color: #666;
}
.filter-wrapper .filter .hd{
  background: #f5f5f5;
  padding-left: 10px;
  color: #999;
  line-height: 30px;
  font-size: 24rpx;
}
.filter-wrapper .filter .f-type{
  display: block;
  line-height: 30px;
  font-size: 12px;
  padding-left: 4%;
}
.filter-wrapper .filter .thr-wrapper{
  overflow: hidden;
}
.filter-wrapper .thr-wrapper text{
  display: inline-block;
  background: #f5f5f5;
  text-align: center;
  width: 28%;
  line-height: 35px;
  border-radius: 6px;
  font-size: 12px;
  margin-left: 4%;
  margin-bottom: 10px;
}