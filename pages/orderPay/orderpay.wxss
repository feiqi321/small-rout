/* pages/orderPay/orderpay.wxss */
.address{
  overflow: hidden;
  border-bottom: 1px solid #e1e1e1;
  font-size: 28rpx;
  line-height: 50rpx; 
  padding: 15rpx;
  margin-bottom: 15rpx;
  position: relative;
  padding-right: 50rpx;
  background:#fafafa; 
}
.address image{
  position: absolute;
  width: 60rpx;
  height: 60rpx;
  right: 15rpx;
  top: 33rpx;
}
.address .detail{
  color: #999;
  height: 50rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.address .user .text{
  float: right;
}

.table-de-tr {
  box-sizing: border-box;
  background: #fff;
  border-bottom: 1px solid #e1e1e1;
  overflow: hidden;
  padding: 15rpx 0;
}
.table-de-tr .xz icon{
  vertical-align: middle;
  margin-top: 70rpx;
}
.table-de-tr .img{
  width: 120rpx;
  height: 120rpx;
  float: left;
  margin-left: 20rpx;
}
.table-de-tr .img image{
  width: 100%;
  height: 100%;
}
.table-de-tr  .detail{
  margin-left: 150rpx;
  margin-right: 0;
  padding-left: 10rpx;
  line-height: 30rpx;
  position: relative;
  padding-right: 20rpx;
  height: 120rpx;
}
.table-de-tr  .detail .title{
  font-size: 24rpx;
  height: 40rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
   width: 100%;
}
.table-de-tr  .detail .des{
  font-size: 24rpx;
  height: 40rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  width: 100%;
  color: #ccc;
}
.table-de-tr  .detail .n-p{
  font-size: 24rpx;
  height: 30rpx;
  overflow: hidden;
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  color: #555;
  text-align: right;
  padding: 0 20rpx;
  box-sizing: border-box;
}
.table-de-tr  .detail .n-p .money{
  color: #f00;
  float: left;
}

.bot-tool{
  line-height: 90rpx;
  height: 90rpx;
  border-top: 1px solid #e1e1e1;
  text-align: right;
  font-size: 28rpx;
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  background: #fff;
}
.bot-tool .sub{
  width: 200rpx;
  background: #fe4543;
  display: inline-block;
  color: #fff;
  height: 90rpx;
  font-size: 30rpx;
  text-align: center;
  margin-left: 20rpx;
}
.bot-tool .money{
  color: #f00;
}