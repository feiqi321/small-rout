/**index.wxss**/
.nav{
  background: #fff;
  height: 40px;
  margin-bottom: 20rpx;
}
.nav navigator{
  width: 50%;
  display: inline-block;
  text-align: center;
  line-height: 38px;
  font-size: 16px;
  box-sizing: border-box;
}
.navigator-hover{
  border-bottom: 2px solid #f00;
  background: #fff;
}
.yhj{
  background: #fff;
  margin-top: 15px;
  padding: 10px 20px;
}
.yhj .hd{
  line-height: 30px;
  overflow: hidden;
  font-size: 16px;
  border-bottom: 1px solid #e2e2e2;
  padding-bottom: 10px;
}
.yhj .hd navigator{
  float: right;
  font-size: 12px;
  color:#369;
}
.card-item{
  background: #0ea8f0;
  padding: 10px;
  overflow: hidden;
  border-radius: 3px;
  margin-top: 15px;
  color: #fff;
  line-height: 2.2em;
}
.card-item .des{
  font-size: 18px;
}
.db{
  background: #fff;
  margin-top: 15px;
  padding: 10px 20px;
}
.db navigator{
  float: right;
  font-size: 12px;
  color:#369;
}
.db .hd{
  line-height: 30px;
  overflow: hidden;
  font-size: 16px;
  border-bottom: 1px solid #e2e2e2;
  padding-bottom: 10px;
}
.db .db-item{
  line-height: 30px;
  border-bottom: 1px dashed #e2e2e2;
  color: #f00;
  font-size: 14px;
}